                </div>
            </nav>
        </header>
        <div id="main-content" class="pt-0">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-light-{{ label }} color-{{ label }} alert-dismissible show fade">
                        <i class="bi bi-exclamation-circle"></i>
                        {{ message|trans }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'template.layout.flash_message_close_aria_label'|trans }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="page-heading">
                <div class="page-title">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-1 order-last">
                            <h1>{{ h1 }}</h1>
                        </div>
