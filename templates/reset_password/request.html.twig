{% extends 'auth_layout.html.twig' %}

{% set pageTitle = 'Réinitialisation du mot de passe' %}
{% set h1 = 'Réinitialisation du mot de passe' %}
{% set subtitle = 'Entrez votre adresse mail' %}

{% block form %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <button class="btn btn-primary">Faire la demande</button>
    {{ form_end(requestForm) }}
{% endblock %}

